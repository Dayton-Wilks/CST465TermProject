@model PostModel
    <form action="CreatePost" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="@Model.Title"></label>
            <input asp-for="@Model.Title" class="form-control" />
            <span asp-validation-for="@Model.Title" class="text-danger"></span>
        </div>
        <hr />
        <div class="form-group">
            <label asp-for="@Model.ImageUrl"></label>
            <input asp-for="@Model.ImageUrl" class="form-control" />
            <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
        </div>
        <hr />
        <div class="form-group">
            <label asp-for="@Model.PostText"></label>
            <input asp-for="@Model.PostText" class="form-control" />
            <span asp-validation-for="@Model.PostText" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-default">Post</button>
    </form>
